# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

#Second page
GET   /secondpage                          controllers.Application.secondpage

#Dynamic Content
GET   /name                          controllers.Application.hello(name:String)

#Redirect
GET /redir                            controllers.Application.redir()

GET /index1                           controllers.Application.index1()

GET /plannedUpdates                    controllers.Application.plannedUpdates()

GET /defaultVal                       controllers.Application.defaultVal()

GET /index2                             controllers.Application.index2(name:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    